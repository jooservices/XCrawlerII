{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "inertiajs/inertia-laravel": "^2.0",
        "jooservices/client": "^0.5.0",
        "jooservices/dto": "^1.0",
        "jooservices/useragent": "^1.1",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.44",
        "laravel/scout": "^10.24",
        "laravel/tinker": "^2.10.1",
        "matchish/laravel-scout-elasticsearch": "^7.12",
        "mongodb/laravel-mongodb": "^5.0",
        "nwidart/laravel-modules": "^12.0",
        "symfony/dom-crawler": "^8.0",
        "tightenco/ziggy": "^2.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5.3",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@composer hooks:install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1 --timeout=0\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test --testsuite=Unit",
            "@php artisan test --testsuite=Feature"
        ],
        "format": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpcbf --standard=phpcs.xml"
        ],
        "format:check": [
            "@php vendor/bin/pint --test",
            "@php vendor/bin/phpcs --standard=phpcs.xml"
        ],
        "lint": [
            "@composer format:check"
        ],
        "analyse": [
            "@php vendor/bin/phpstan analyse --memory-limit=1G"
        ],
        "analyse:baseline": [
            "@php vendor/bin/phpstan analyse --memory-limit=1G --generate-baseline=phpstan-baseline.neon"
        ],
        "mess": [
            "@php -d error_reporting=8191 vendor/bin/phpmd app,routes,config text phpmd.xml"
        ],
        "quality": [
            "@composer lint",
            "@composer analyse",
            "@composer mess"
        ],
        "quality:full": [
            "@composer quality",
            "@composer test"
        ],
        "quality:fix": [
            "@composer format",
            "@composer quality:full"
        ],
        "hooks:install": [
            "bash scripts/setup-git-hooks.sh"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "Modules/*/composer.json"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
